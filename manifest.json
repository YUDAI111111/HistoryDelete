{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "History Cleaner (Popup Only)",
  "version": "1.3.2",
  "description": "履歴削除ワンタップ＋自動削除（間隔/毎日/起動時/全ウィンドウ閉/ロック）。テーマ切替・バッジ（99+）。CSP対応＆コンパクトUI。",
  "permissions": [
    "browsingData",
    "storage",
    "history",
    "alarms",
    "idle",
    "windows"
  ],
  "action": {
    "default_title": "履歴削除",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js"
  }
}